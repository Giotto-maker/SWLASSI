%h1 Reviews about #{@artwork.nome}
%table#reviews
  %thead 
    %tr
      %th Rating
      %th Comment
      - if current_user.admin?
        %th Delete review
    %tbody
      - @reviews.each do |review|
        %tr
          %td= review.valutation
          %td= review.comment
          - if current_user.admin?
            %td= link_to "Delete", artwork_review_path(id: review.id) , :method => :delete
%br
%div #{link_to "Back to artwork details", artwork_path(@artwork.id)}